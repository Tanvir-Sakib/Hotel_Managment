<% include partials/mainheader.ejs %>
<style>
    * {
        box-sizing: border-box;
    }

    input[type=text], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }

    label {
        padding: 12px 12px 12px 0;
        display: inline-block;
    }

    input[type=submit] {
        background-color: #04AA6D;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        float: right;
    }

    input[type=submit]:hover {
        background-color: #45a049;
    }

    .container {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    .col-25 {
        float: left;
        width: 25%;
        margin-top: 6px;
    }

    .col-75 {
        float: left;
        width: 75%;
        margin-top: 6px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    /* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
    @media screen and (max-width: 600px) {
        .col-25, .col-75, input[type=submit] {
            width: 100%;
            margin-top: 0;
        }
    }
</style>
</head>
<div>

    <div class="container">
        <h2>Edit User Form</h2>
        <form action="/edituser/<%=user.id %>" method="post">
            <input type="hidden" value="<%= user.id  %>" class="form-control" id="id" name="userid">

            <div class="row">
                <div class="col-25">
                    <label for="name">Name</label>
                </div>
                <div class="col-75">
                    <input type="text" value="<%= user.name  %>" id="name" placeholder="Enter name.." name="name">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="username">User Name:</label>
                </div>
                <div class="col-75">
                    <input type="text" value="<%= user.username  %>" id="username" placeholder="Enter user name.." name="username">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="address">Address</label>
                </div>
                <div class="col-75">
                    <input type="text" value="<%= user.address  %>" id="address" placeholder="Enter address.." name="address">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="PhoneNumber">Phone Number</label>
                </div>
                <div class="col-75">
                    <input type="text" value="<%= user.phonenumber  %>" id="PhoneNumber" placeholder="Enter Phone number.." name="tel">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="dob">Date of Birth</label>
                </div>
                <div class="col-75">
                    <input type="date" value="<%= user.dob  %>" id="dob" placeholder="Enter date of birth.." name="dob">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="email">Email</label>
                </div>
                <div class="col-75">
                    <input type="text" value="<%= user.email  %>" id="email" placeholder="Enter email.." name="email">
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="pwd">Password</label>
                </div>
                <div class="col-75">
                    <input type="text" value="<%= user.pwd %>" id="pwd" placeholder="Enter password.." name="pwd">
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>
</div>

</body>
</html>